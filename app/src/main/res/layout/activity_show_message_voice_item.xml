<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/head_portrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_head_portrait"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/head_portrait"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="用户名"
        />

    <Button
        android:id="@+id/play_button"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@color/colorButton"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/head_portrait"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:drawableLeft="@drawable/sound"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:text="00:00"
        android:textColor="@color/colorText"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_button"
        android:layout_toRightOf="@id/head_portrait"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:text="时间"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/date"
        android:background="@color/colorLine"/>

    <TextView
        android:id="@+id/comt_num"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/play_button"
        android:text="(1)"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        />

    <Button
        android:id="@+id/comt_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/play_button"
        android:layout_toLeftOf="@id/comt_num"
        android:background="@drawable/ic_comt"
        android:layout_marginTop="7dp"
        android:layout_marginRight="4dp"
        />
    <TextView
        android:id="@+id/like_num"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/play_button"
        android:layout_toLeftOf="@id/comt_icon"
        android:text="(1)"
        android:textSize="13sp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="4dp"
        />
    <Button
        android:id="@+id/like_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/play_button"
        android:layout_toLeftOf="@id/like_num"
        android:background="@drawable/ic_like"
        android:layout_marginTop="7dp"
        android:layout_marginRight="4dp"
        />
</RelativeLayout>